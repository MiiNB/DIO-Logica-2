class Heroi {
  constructor(nome, idade, tipo) {
    this.nome = nome;
    this.idade = idade;
    this.tipo = tipo;
  }

  atacar() {
    if (this.tipo === "mago") {
      console.log(`O ${this.tipo} atacou usando magia.`);
    }
    // Exibindo as informações do herói no console
    console.log(`Nome: ${this.nome}, Idade: ${this.idade}, Tipo: ${this.tipo}`);
  }
}

// Função para testar o ataque do herói
const heroi1 = new Heroi("Gandalf", 1000, "mago");
heroi1.atacar();
